<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">

    <LinearLayout
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/one_kyc_bg_white_rounded"
        android:orientation="vertical"
        android:padding="@dimen/kyc_sdk_24dp">

        <ProgressBar
            android:layout_width="@dimen/kyc_sdk_72dp"
            android:layout_height="@dimen/kyc_sdk_72dp"
            android:indeterminateTint="@color/kyc_plus_green" />
    </LinearLayout>
</FrameLayout>