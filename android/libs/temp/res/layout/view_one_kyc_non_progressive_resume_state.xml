<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="?attr/digital_identity_spacing_5x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="?attr/digital_identity_spacing_5x"
        android:paddingTop="?attr/digital_identity_spacing_5x"
        android:paddingRight="?attr/digital_identity_spacing_5x"
        android:paddingBottom="?attr/digital_identity_spacing_8x">

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Let's submit your KTP photo and selfie!"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:kycPlusTypographyStyle="kyc_plus_title_large_default" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_x"
            android:text="@string/jago_one_kyc_widget_dropped_selfie_description"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            app:kycPlusTypographyStyle="kyc_plus_body_small_default" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_ktp_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_3x"
            app:srcCompat="@drawable/kyc_plus_spot_ktp"
            app:layout_constraintEnd_toStartOf="@+id/ic_selfie_step"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description"
            tools:alpha="0.4" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_selfie_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_3x"
            app:srcCompat="@drawable/kyc_plus_default_driver_mini_spot_clear_face"
            app:layout_constraintEnd_toStartOf="@+id/ic_personal_details_step"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/ic_ktp_step"
            app:layout_constraintTop_toBottomOf="@+id/text_description" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_personal_details_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_3x"
            app:srcCompat="@drawable/kyc_plus_default_transport_mini_spot_send_survey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/ic_selfie_step"
            app:layout_constraintTop_toBottomOf="@+id/text_description" />


        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="?attr/digital_identity_spacing_3x"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/rounded_progress_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_ktp_step"
            tools:progress="70" />


        <View
            android:id="@+id/stepper_progress_delimiter1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/one_kyc_widget_progress_stepper_indicator_main"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar" />


        <View
            android:id="@+id/stepper_progress_delimiter2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/one_kyc_widget_progress_stepper_indicator_main"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintStart_toStartOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/text_ktp_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_4x"
            android:gravity="center"
            android:text="@string/jago_one_kyc_widget_dropped_step_ktp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/text_selfie_step"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:kycPlusTypographyStyle="kyc_plus_caption_moderate_book_default"
            tools:alpha="0.4" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/text_selfie_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_4x"
            android:gravity="center"
            android:text="@string/jago_one_kyc_widget_dropped_step_selfie"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/text_personal_details_step"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/text_ktp_step"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:kycPlusTypographyStyle="kyc_plus_caption_moderate_book_default" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/text_personal_details_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_4x"
            android:gravity="center"
            android:text="@string/jago_one_kyc_widget_dropped_step_personal_details"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/text_selfie_step"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:kycPlusTypographyStyle="kyc_plus_caption_moderate_book_default" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
