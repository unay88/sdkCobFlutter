<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/kyc_sdk_16dp"
    android:visibility="gone"
    tools:visibility="visible">

    <View
        android:id="@+id/iconPlaceholder"
        android:layout_width="@dimen/kyc_sdk_64dp"
        android:layout_height="@dimen/kyc_sdk_64dp"
        android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titlePlaceholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/kyc_sdk_20dp"
        android:layout_marginStart="@dimen/kyc_sdk_16dp"
        android:layout_marginEnd="@dimen/kyc_sdk_48dp"
        android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable"
        app:layout_constraintBottom_toTopOf="@+id/descriptionPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconPlaceholder"
        app:layout_constraintTop_toTopOf="@+id/iconPlaceholder" />

    <View
        android:id="@+id/descriptionPlaceholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/kyc_sdk_24dp"
        android:layout_marginStart="@dimen/kyc_sdk_16dp"
        android:layout_marginEnd="@dimen/kyc_sdk_16dp"
        android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable"
        app:layout_constraintBottom_toBottomOf="@+id/iconPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconPlaceholder"
        app:layout_constraintTop_toBottomOf="@+id/titlePlaceholder" />

    <View
        android:id="@+id/cardPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kyc_sdk_156dp"
        android:layout_marginTop="@dimen/kyc_sdk_32dp"
        android:background="@drawable/one_kyc_widget_shimmer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconPlaceholder" />

    <View
        android:id="@+id/cardPlaceholder2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kyc_sdk_90dp"
        android:layout_marginTop="@dimen/kyc_sdk_32dp"
        android:background="@drawable/one_kyc_widget_shimmer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardPlaceholder" />

</androidx.constraintlayout.widget.ConstraintLayout>