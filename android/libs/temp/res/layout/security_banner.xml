<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_security_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/kyc_plus_white"
    app:cardCornerRadius="@dimen/kyc_sdk_16dp"
    app:cardElevation="@dimen/kyc_sdk_0dp"
    tools:theme="@style/DigitalIdentity.Light.Green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_security_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_grey_border_16"
        android:padding="@dimen/kyc_sdk_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_security_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kyc_plus_spot_secure" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/tv_security_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kyc_sdk_8dp"
            android:text="@string/onekyc_consent_supervised_title"
            app:kycPlusTypographyStyle="kyc_plus_title_tiny_bold_static_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_security_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/tv_security_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kyc_sdk_8dp"
            android:layout_marginTop="@dimen/kyc_sdk_4dp"
            android:text="@string/onekyc_consent_supervised_description"
            app:kycPlusTypographyStyle="kyc_plus_caption_small_book_static_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_security_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_security_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>