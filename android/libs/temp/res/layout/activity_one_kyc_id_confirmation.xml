<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kyc_plus_color_primary"
    tools:theme="@style/DigitalIdentity.Light.Green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.iab.digitalidentity.ui.shimmer.KycPlusShimmer
        android:id="@+id/shimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:kyc_plus_shimmer_layout="@layout/layout_shimmer_one_kyc_id_confirmation"
        app:layout_constraintTop_toBottomOf="@+id/toolBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/kyc_sdk_0dp"
            app:layout_constraintBottom_toTopOf="@+id/llFooter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/kyc_sdk_16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clConfirmIdParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolBar">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivIdCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/kyc_plus_spot_id_card" />

                    <com.iab.digitalidentity.ui.text.KycPlusTextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/kyc_sdk_16dp"
                        android:text="@string/onekyc_userdetails_header_title"
                        app:kycPlusTypographyStyle="kyc_plus_title_moderate_bold_default"
                        app:layout_constraintBottom_toTopOf="@+id/tvDescription"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivIdCard"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <com.iab.digitalidentity.ui.text.KycPlusTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/kyc_sdk_16dp"
                        android:text="@string/onekyc_userdetails_header_description"
                        app:kycPlusTypographyStyle="kyc_plus_body_small_default"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ivIdCard"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDetailContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kyc_sdk_32dp"
                    app:cardCornerRadius="@dimen/kyc_sdk_16dp"
                    app:cardElevation="@dimen/kyc_sdk_0dp"
                    app:cardBackgroundColor="@color/kyc_plus_color_primary"
                    app:layout_constraintTop_toBottomOf="@+id/clConfirmIdParent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_grey_border_2"
                        android:orientation="vertical"
                        android:padding="@dimen/kyc_sdk_16dp">

                        <com.iab.digitalidentity.ui.text.KycPlusTextView
                            android:id="@+id/tvNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/onekyc_userdetails_name"
                            app:kycPlusTypographyStyle="kyc_plus_caption_small_demi_default" />

                        <com.iab.digitalidentity.ui.text.KycPlusTextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kyc_sdk_4dp"
                            app:kycPlusTypographyStyle="kyc_plus_title_small_demi_default"
                            tools:text="Id*** Muh***** Fa**** U**" />

                        <com.iab.digitalidentity.ui.text.KycPlusTextView
                            android:id="@+id/tvNIKLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kyc_sdk_32dp"
                            android:text="@string/onekyc_userdetails_nik"
                            app:kycPlusTypographyStyle="kyc_plus_caption_small_demi_default" />

                        <com.iab.digitalidentity.ui.text.KycPlusTextView
                            android:id="@+id/tvNIK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kyc_sdk_4dp"
                            app:kycPlusTypographyStyle="kyc_plus_title_small_demi_default"
                            tools:text="12** *** *** **08" />

                        <com.iab.digitalidentity.ui.text.KycPlusTextView
                            android:id="@+id/tvAddressLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kyc_sdk_32dp"
                            android:text="@string/onekyc_userdetails_address"
                            app:kycPlusTypographyStyle="kyc_plus_caption_small_demi_default" />

                        <com.iab.digitalidentity.ui.text.KycPlusTextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kyc_sdk_4dp"
                            app:kycPlusTypographyStyle="kyc_plus_title_small_demi_default"
                            tools:text="Jl. Sultan Andara No.212, Sawangan, Jakarta Selatan" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <include
                    android:id="@+id/secureLayout"
                    layout="@layout/security_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/kyc_sdk_16dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/kyc_sdk_16dp"
            android:paddingEnd="@dimen/kyc_sdk_16dp"
            android:paddingBottom="@dimen/kyc_sdk_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.iab.digitalidentity.ui.button.KycPlusButton
                android:id="@+id/btnCta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:kyc_plus_text="@string/onekyc_userdetails_confirm" />

            <com.iab.digitalidentity.ui.text.KycPlusTextView
                android:id="@+id/tvHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/kyc_sdk_16dp"
                app:kycPlusTypographyStyle="kyc_plus_caption_small_demi_default"
                tools:text="@string/onekyc_userdetails_help" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.iab.digitalidentity.ui.commonviews.KycSdkFullScreenLoader
        android:id="@+id/loaderContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>