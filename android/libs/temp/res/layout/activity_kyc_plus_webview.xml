<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/digital_identity_fill_background_quaternary"
    tools:theme="@style/DigitalIdentity.Light.Green">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/gopayPlusNavbar"
        android:layout_width="@dimen/kyc_sdk_0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:kycPlusTypographyStyle="kyc_plus_title_moderate_bold_default"
            tools:text="Web view" />
    </androidx.appcompat.widget.Toolbar>

    <include
        android:id="@+id/gopayPlusErrorView"
        layout="@layout/layout_gopay_plus_web_error_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kyc_sdk_0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gopayPlusNavbar"
        tools:visibility="visible" />

    <WebView
        android:id="@+id/gopayPlusWebview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kyc_sdk_0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gopayPlusNavbar" />

    <ProgressBar
        android:id="@+id/gopayPlusProgressView"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/kyc_sdk_0dp"
        android:layout_height="@dimen/kyc_sdk_6dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/kyc_plus_rounded_progress_green_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gopayPlusNavbar"
        tools:progress="30" />
</androidx.constraintlayout.widget.ConstraintLayout>
