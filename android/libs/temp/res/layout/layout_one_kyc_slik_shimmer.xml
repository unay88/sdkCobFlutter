<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,InefficientWeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/kyc_sdk_16dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_18dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:layout_weight="3"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_24dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:layout_weight="7"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_18dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:layout_weight="9"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_32dp">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/two"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="@dimen/kyc_sdk_20dp"
                android:layout_height="@dimen/kyc_sdk_20dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="@dimen/kyc_sdk_46dp"
                android:layout_height="@dimen/kyc_sdk_46dp"
                android:layout_marginTop="@dimen/kyc_sdk_12dp"
                android:layout_marginBottom="@dimen/kyc_sdk_8dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/kyc_sdk_16dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/three"
            app:layout_constraintStart_toEndOf="@id/one">

            <View
                android:layout_width="@dimen/kyc_sdk_20dp"
                android:layout_height="@dimen/kyc_sdk_20dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="@dimen/kyc_sdk_46dp"
                android:layout_height="@dimen/kyc_sdk_46dp"
                android:layout_marginTop="@dimen/kyc_sdk_12dp"
                android:layout_marginBottom="@dimen/kyc_sdk_8dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/kyc_sdk_16dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/four"
            app:layout_constraintStart_toEndOf="@id/two">

            <View
                android:layout_width="@dimen/kyc_sdk_20dp"
                android:layout_height="@dimen/kyc_sdk_20dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="@dimen/kyc_sdk_46dp"
                android:layout_height="@dimen/kyc_sdk_46dp"
                android:layout_marginTop="@dimen/kyc_sdk_12dp"
                android:layout_marginBottom="@dimen/kyc_sdk_8dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/kyc_sdk_16dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/three">

            <View
                android:layout_width="@dimen/kyc_sdk_20dp"
                android:layout_height="@dimen/kyc_sdk_20dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="@dimen/kyc_sdk_46dp"
                android:layout_height="@dimen/kyc_sdk_46dp"
                android:layout_marginTop="@dimen/kyc_sdk_12dp"
                android:layout_marginBottom="@dimen/kyc_sdk_8dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/kyc_sdk_16dp"
                android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="@dimen/kyc_sdk_16dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_weight="6"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="@dimen/kyc_sdk_16dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_weight="4"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="15">

        <View
            android:layout_width="@dimen/kyc_sdk_16dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_weight="10"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="13">

        <View
            android:layout_width="@dimen/kyc_sdk_16dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_weight="6"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kyc_sdk_28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="17">

        <View
            android:layout_width="@dimen/kyc_sdk_16dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_marginHorizontal="@dimen/kyc_sdk_16dp"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />

        <View
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="@dimen/kyc_sdk_16dp"
            android:layout_weight="9"
            android:background="@drawable/one_kyc_widget_shimmer_round_corner_drawable" />
    </LinearLayout>
</LinearLayout>