<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/privacy_and_tnc_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.iab.digitalidentity.ui.selectioncontrol.KycPlusCheckBox
            android:id="@+id/checkbox_privacy_and_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kyc_sdk_8dp"

            app:layout_constraintBottom_toBottomOf="@id/tv_privacy_and_tnc"
            app:layout_constraintEnd_toStartOf="@id/tv_privacy_and_tnc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_privacy_and_tnc" />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/tv_privacy_and_tnc"
            android:layout_width="@dimen/kyc_sdk_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kyc_sdk_8dp"
            android:padding="@dimen/kyc_sdk_8dp"
            app:kycPlusTypographyStyle="kyc_plus_body_small_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_privacy_and_tnc"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="With this, I agree to Gopay Plus Terms &amp; Conditions and Privacy Policy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>