<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/digital_identity_fill_active_secondary"
    android:paddingBottom="?attr/digital_identity_spacing_4x"
    app:cardElevation="0dp"
    app:cardCornerRadius="?attr/digital_identity_spacing_5x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/error_details_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/kyc_plus_white"
            app:cardCornerRadius="?attr/digital_identity_spacing_4x">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="?attr/digital_identity_spacing_5x">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/error_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/kyc_plus_default_core_mini_spot_failed_status_driver_canceled_gocar_global_content_space"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.iab.digitalidentity.ui.text.KycPlusTextView
                    android:id="@+id/text_error_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="?attr/digital_identity_spacing_2x"
                    android:gravity="start"
                    tools:text="Couldn\â€™t load jago activation status"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/error_icon"
                    app:layout_constraintTop_toTopOf="@+id/error_icon"
                    app:kycPlusTypographyStyle="kyc_plus_title_tiny_demi_default" />

                <com.iab.digitalidentity.ui.text.KycPlusTextView
                    android:id="@+id/text_error_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/digital_identity_spacing_x"
                    android:gravity="start"
                    tools:text="Please check your internet connection and reload status"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/text_error_title"
                    app:layout_constraintTop_toBottomOf="@id/text_error_title"
                    app:kycPlusTypographyStyle="kyc_plus_body_small_default" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.iab.digitalidentity.ui.button.KycPlusCircularButton
            android:id="@+id/icon_refresh_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/digital_identity_spacing_2x"
            android:layout_marginEnd="?attr/digital_identity_spacing_2x"
            app:kyc_plus_circular_btn_type="kyc_plus_circular_primary_regular"
            app:kyc_plus_cb_enabled="true"
            app:kyc_plus_icon_color_tint="?attr/digital_identity_icon_static_white"
            app:kyc_plus_icon_name="@drawable/kyc_plus_ic_actions_16_retry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/error_details_view"
            />

        <com.iab.digitalidentity.ui.text.KycPlusTextView
            android:id="@+id/text_refresh_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="?attr/digital_identity_spacing_4x"
            android:text="@string/jago_one_kyc_widget_error_cta"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@id/error_details_view"
            app:layout_constraintEnd_toStartOf="@+id/icon_refresh_status"
            app:layout_constraintStart_toStartOf="parent"
            app:kycPlusTypographyStyle="kyc_plus_title_tiny_demi_active" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>