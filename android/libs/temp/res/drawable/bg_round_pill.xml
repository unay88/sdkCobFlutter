<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="2" android:useLevel="false">
            <stroke android:width="1dp" android:color="#00880D"/>
            <solid android:color="?attr/digital_identity_fill_background_secondary"/>
        </shape>
    </item>
    <item android:state_activated="false">
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="2" android:useLevel="false">
            <stroke android:width="1dp" android:color="@color/kyc_plus_black_10"/>
            <solid android:color="?attr/digital_identity_fill_background_secondary"/>
        </shape>
    </item>
</selector>
